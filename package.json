{
  "name": "cap_tutorial",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/event-broker": "^0.3.0",
    "@sap/cds": "^9",
    "axios": "^1.13.0",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2"
  },
  "scripts": {
    "start": "cds run",
    "watch": "cds watch"
  },
  "private": true,
  "cds": {
    "requires": {
      "auth": {
        "kind": "mocked",
        "users": {
          "admin": {
            "roles": [
              "Admin"
            ]
          },
          "viewer": {
            "roles": []
          }
        }
      },
      "stockService": {
        "kind": "rest",
        "credentials": {
          "url": "http://localhost:5000"
        }
      },
      "messaging": {
        "kind": "file-based-messaging",
        "file": "../msg-box"
      }
    }
  }
}